\---
const tools = [
  "Google Ads",
  "Google Analytics",
  "Meta Ads",
  "SQL",
  "MS Excel",
  "LaTeX",
  "Python",
  "Power BI",
]
---

<aside class="bg-gray-50 p-8 rounded-lg shadow-sm">
  <div class="text-center mb-8">
    <div class="mb-4">
      <img 
        src="profile-photo.png" 
        alt="Daria Marukhlenko" 
        class="w-48 h-48 rounded-full mx-auto object-cover border-4 border-gray-100"
      />
    </div>
    <h1 class="text-2xl font-bold mb-1">Daria Marukhlenko</h1>
    <div class="text-theme-accent font-medium">Digital Marketing Manager/Analyst</div>
  </div>

  <div class="space-y-4 mb-8">
    <div class="flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-theme-accent shrink-0" viewBox="0 0 20 20" fill="currentColor">
        <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
      </svg>
      <a href="mailto:da.marukhlenko@gmail.com" class="ml-2 text-gray-600 hover:text-theme-accent transition-colors break-all">
        da.marukhlenko@gmail.com
      </a>
    </div>
    <div class="flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-theme-accent shrink-0" fill="currentColor" viewBox="0 0 24 24">
        <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
      </svg>
      <a 
        href="https://www.linkedin.com/in/daria-marukhlenko/" 
        target="_blank" 
        rel="noopener noreferrer" 
        class="ml-2 text-gray-600 hover:text-theme-accent transition-colors"
      >
        LinkedIn Profile
      </a>
    </div>
  </div>

  <div>
    <h2 class="text-xl font-semibold mb-4 text-gray-800 uppercase tracking-wider">Technical Tools</h2>
    <div class="flex flex-wrap gap-2">
      {tools.map((tool) => (
        <span class="px-3 py-1.5 bg-white text-gray-700 rounded text-sm">
          {tool}
        </span>
      ))}
    </div>
  </div>
</aside>
