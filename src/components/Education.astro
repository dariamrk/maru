---

<section class="bg-[#dfd5e6] rounded-lg shadow-sm p-8 mb-8">
  <h2 class="text-2xl font-bold text-theme-heading mb-1">Education</h2>
  <!-- <div class="text-theme-secondary mb-8">Academic Background & Professional Development</div> -->
  
  <div class="mb-8">
    <div class="flex justify-between items-start mb-2">
      <div>
        <h3 class="text-xl font-semibold text-theme-accent">{education.university}</h3>
        <div class="text-lg text-theme-secondary">{education.degree}</div>
        <div class="text-sm text-theme-secondary/80">Graduation project: {education.project}</div>
      </div>
      <div class="text-sm text-theme-secondary bg-gray-100 px-3 py-1 rounded whitespace-nowrap">
        {education.period}
      </div>
    </div>
  </div>

  <h3 class="text-xl font-semibold text-theme-heading mb-4">Professional Development</h3>
  <div class="space-y-4 mb-8">
    {courses.map((course) => (
      <div class="flex justify-between items-start">
        <div>
          <div class="text-theme-secondary font-medium">{course.name}</div>
          <div class="text-sm text-theme-secondary/80">{course.institution}</div>
        </div>
        <div class="text-sm text-theme-secondary bg-gray-100 px-3 py-1 rounded whitespace-nowrap">
          {course.period}
        </div>
      </div>
    ))}
  </div>

  <h3 class="text-xl font-semibold text-theme-heading mb-4">Publications</h3>
  <div class="space-y-6">
    {publications.map((pub) => (
      <div class="border-b border-gray-100 pb-6 last:border-b-0 last:pb-0">
        <h4 class="text-lg font-semibold text-theme-accent mb-1 flex items-center">
          <span>{pub.title}</span>
          {pub.link && (
            <a href={pub.link} target="_blank" rel="noopener noreferrer" class="ml-2 text-sm text-blue-600 hover:text-blue-800 underline">
              [View Paper]
            </a>
          )}
        </h4>
        <div class="text-theme-secondary mb-1">{pub.authors}</div>
        <div class="text-sm text-theme-secondary/80 italic mb-3">{pub.status}</div>
        <ul class="space-y-2">
          {pub.findings.map((finding) => (
            <li class="flex items-start gap-2">
              <span class="text-theme-accent mt-1.5">â€¢</span>
              <span class="text-theme-text">{finding}</span>
            </li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</section>
