---
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Daria Marukhlenko - Digital Marketing Manager, Growth Marketing" />
    <meta name="author" content="Daria Marukhlenko" />
    <meta name="keywords" content="daria marukhlenko, user aquisition manager, digital marketing specialist, marketing analyst, performance marketing manager, marketing specialist, user aquisition specialist, digital marketing manager" />
    <meta property="og:title" content="Daria Marukhlenko - Digital Marketing Manager, Growth Marketing" />
    <meta property="og:description" content="Digital Marketing Professional with expertise in tech and e-commerce, driving growth and optimizing marketing performance" />
    <meta property="og:image" content="/profile-photo.png" />
    <meta property="og:url" content="https://maru.lc" />   
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;500;700&display=swap" rel="stylesheet" />
    <!-- Schema.org markup -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Daria Marukhlenko",
        "jobTitle": "Performance Marketing Manager",
        "url": "https://maru.lc",
        "image": "https://maru.lc/profile-photo.png",
        "description": "Digital Marketing Professional with expertise in tech and e-commerce"
      }
    </script>
  </head>
  <body class="bg-bg-gradient-to-br from-[#3B3B3B] to-[#D8C4E6] min-h-screen py-8 font-['Lexend']">
    <div class="container mx-auto px-4 max-w-6xl">
      <div class="grid grid-cols-12 gap-8">
        <div class="col-span-12 lg:col-span-4 relative">
          <div class="lg:sticky lg:top-8">
            <slot name="sidebar" />
          </div>
        </div>
        <div class="col-span-12 lg:col-span-8">
          <slot name="content" />
        </div>
      </div>
    </div>
  </body>
</html>
