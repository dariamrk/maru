---
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Daria Marukhlenko - Digital Marketing Manager/Analyst Portfolio" />
    <meta name="author" content="Daria Marukhlenko" />
    <meta name="keywords" content="digital marketing, marketing analyst, performance marketing, marketing manager" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet" />
  </head>
  <body class="bg-theme-background min-h-screen py-8 font-['Roboto']">
    <div class="container mx-auto px-4 max-w-6xl">
      <div class="grid grid-cols-12 gap-8">
        <div class="col-span-12 lg:col-span-[3.5] relative">
          <div class="lg:sticky lg:top-8">
            <slot name="sidebar" />
          </div>
        </div>
        <div class="col-span-12 lg:col-span-[8.5]">
          <slot name="content" />
        </div>
      </div>
    </div>
  </body>
</html>
